{
    // General settings
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.cursorBlinking": true,
    // Editor settings
    "editor.fontSize": 12,
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "editor.wordWrap": "bounded",
    "editor.formatOnPaste": true,
    "editor.hover.delay": 100,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.rulers": [
        120
    ],
    "editor.wordWrapColumn": 120,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.enablePreview": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 1,
    // Git settings
    "git.autofetch": true,
    "git.promptToSaveFilesBeforeCommit": "always",
    "git.confirmEmptyCommits": true,
    // Spell check settings
    "cSpell.language": "en",
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "json",
        "latex",
        "less",
        "markdown",
        "ocaml",
        "php",
        "plaintext",
        "pub",
        "python",
        "restructuredtext",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    // TODO_list settings
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        "todo",
        "fixme",
        "unimplemented",
        "Abort."
    ],
    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",
        "**/settings.json"
    ],
    // Python settings
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "black",
    "python.languageServer": "Default",
    "[python]": {
        "editor.formatOnPaste": false // because black cannot format on paste
    },
    // C++ settings
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
    // Latex settings
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.autoBuild.interval": 2000,
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.intellisense.update.delay": 200,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.information.show": false,
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    // Html settings
    "html.format.wrapLineLength": 120,
    "html.format.indentInnerHtml": true,
    // Java settings
    "java.configuration.checkProjectSettingsExclusions": false,
    "files.associations": {
        ".emacs": "lisp"
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    "java.semanticHighlighting.enabled": true,
    "java.project.importOnFirstTimeStartup": "automatic",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "default": true,
            "path": "/Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home"
        }
    ],
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.inlayHints.typeHints": false,
    "grammarly.diagnostics": {
        "[markdown]": {
            "ignore": [
                "code"
            ]
        }
    },
    "cSpell.userWords": [
        "concolic",
        "performant"
    ],
    "grammarly.severity": {
        "Wordiness": 1,
        "Pronouns": 1,
        "AccidentallyConfused": 1,
        "SVA": 1,
        "CommonlyConfused": 1,
        "Verbs": 1,
        "BasicPunct": 1,
        "Dialects": 1,
        "Prepositions": 1,
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "rust-analyzer.checkOnSave.command": "check",
    "rust-analyzer.procMacro.enable": true,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "latex-workshop.latex.outDir": "build",
    "python.analysis.completeFunctionParens": true,
    "workbench.colorTheme": "Monokai",
}